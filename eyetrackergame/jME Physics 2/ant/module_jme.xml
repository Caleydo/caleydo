<project name="module_jme" default="compile.module.jme" basedir="..">

    <property name="compiler.args.jme" value="${compiler.args}"/>

    <property name="jme.output.dir" value="${module.jme.basedir}/build"/>
    <property name="jme.testoutput.dir" value="${module.jme.basedir}/build"/>

    <path id="jme.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="jme.module.classpath">
        <pathelement location="${module.jme.basedir}/lib/jogg-0.0.5.jar"/>
        <pathelement location="${module.jme.basedir}/lib/lwjgl.jar"/>
        <pathelement location="${module.jme.basedir}/lib/jorbis-0.0.12.jar"/>
        <pathelement location="${module.jme.basedir}/lib/lwjgl_fmod3.jar"/>
        <pathelement location="${module.jme.basedir}/src"/>
        <pathelement location="${module.jme.basedir}/lib/jinput.jar"/>
        <path refid="library.junit.classpath"/>
    </path>


    <patternset id="excluded.from.module.jme">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.jme">
        <patternset refid="excluded.from.module.jme"/>
    </patternset>

    <path id="jme.module.sourcepath">
        <dirset dir="${module.jme.basedir}">
            <include name="src"/>
        </dirset>
    </path>

    <path id="jme.module.test.sourcepath">
        <dirset dir="${module.jme.basedir}">
            <include name="junit"/>
        </dirset>
    </path>


    <target name="compile.module.jme" depends="compile.module.jme.production,compile.module.jme.tests"
            description="Compile module jME"/>

    <target name="compile.module.jme.production" description="Compile module jME; production classes">
        <mkdir dir="${jme.output.dir}"/>
        <echo>${module.jme.basedir}</echo>
        <javac destdir="${jme.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
               memoryMaximumSize="${compiler.max.memory}" fork="true">
            <compilerarg line="${compiler.args.jme}"/>
            <bootclasspath refid="jme.module.bootclasspath"/>
            <classpath refid="jme.module.classpath"/>
            <src refid="jme.module.sourcepath"/>
        </javac>

        <copy todir="${jme.output.dir}">
            <fileset dir="${module.jme.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.jme.tests" depends="compile.module.jme.production"
            description="compile module jME; test classes" unless="skip.tests">
        <mkdir dir="${jme.testoutput.dir}"/>
        <javac destdir="${jme.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
               memoryMaximumSize="${compiler.max.memory}" fork="true">
            <compilerarg line="${compiler.args.jme}"/>
            <classpath refid="jme.module.classpath"/>
            <classpath location="${jme.output.dir}"/>
            <src refid="jme.module.test.sourcepath"/>
        </javac>

        <copy todir="${jme.testoutput.dir}">
            <fileset dir="${module.jme.basedir}/junit">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="clean.module.jme" description="cleanup module">
        <delete dir="${jme.output.dir}"/>
        <delete dir="${jme.testoutput.dir}"/>
    </target>
</project>