<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="org.caleydo.rcp.views"
            class="org.caleydo.view.visbricks.RcpGLVisBricksView"
            icon="resources/icons/icon.png"
            id="org.caleydo.view.visbricks"
            name="VisBricks">
      </view>
      <view
            allowMultiple="true"
            category="org.caleydo.rcp.views"
            class="org.caleydo.view.visbricks.brick.RcpGLBrickView"
            icon="resources/icons/icon.png"
            id="org.caleydo.view.brick"
            name="Single Brick">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.caleydo.menu.view"
               label="View">
            <command
                  commandId="org.caleydo.view.visbricks.command.openvisbricks"
                  icon="resources/icons/icon.png"
                  style="push">
               <visibleWhen checkEnabled="false">
                  <with
                        variable="org.caleydo.core.isReleaseState">
                     <equals
                           value="releaseVersion">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="org.caleydo.view.visbricks.command.openbrick"
                  icon="resources/icons/icon.png"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="org.caleydo.core.isReleaseState">
                     <equals
                           value="releaseVersion">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.caleydo.view.visbricks.command.handler.OpenVisBricksHandler"
            id="org.caleydo.view.visbricks.command.openvisbricks"
            name="Visbricks">
      </command>
      <command
            defaultHandler="org.caleydo.view.visbricks.command.handler.OpenBrickHandler"
            id="org.caleydo.view.visbricks.command.openbrick"
            name="Bricks">
      </command>
   </extension>
   <extension
         id="org.caleydo.view.visbricks"
         name="VisBricksViewCreator"
         point="org.caleydo.view.ViewCreator">
         <ViewCreator
          id="org.caleydo.view.ViewCreator"
          name="VisBricksViewCreator"
          class="org.caleydo.view.visbricks.creator.ViewCreator" />
   </extension>
</plugin>
