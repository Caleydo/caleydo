<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="org.caleydo.core.views"
            class="org.caleydo.view.bookmark.RcpBookmarkView"
            icon="resources/icons/bookmark.png"
            id="org.caleydo.view.bookmark"
            name="Bookmark">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.caleydo.menu.view"
               label="View">
            <menu
                  id="org.caleydo.menu.view.legacy"
                  label="Legacy">
               <command
                     commandId="org.caleydo.view.bookmark.command.openbookmark"
                     icon="resources/icons/bookmark.png"
                     style="push">
                  <visibleWhen
                        checkEnabled="false">
                     <with
                           variable="org.caleydo.core.isReleaseState">
                        <equals
                              value="releaseVersion">
                        </equals>
                     </with>
                  </visibleWhen>
               </command>
            </menu>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.caleydo.view.bookmark.command.handler.OpenBookmarkHandler"
            id="org.caleydo.view.bookmark.command.openbookmark"
            name="Bookmark">
      </command>
   </extension>
   <extension
         id="org.caleydo.view.bookmark"
         name="BookmarkViewCreator"
         point="org.caleydo.view.ViewCreator">
         <ViewCreator
          id="org.caleydo.view.ViewCreator"
          name="BookmarkViewCreator"
          class="org.caleydo.view.bookmark.creator.ViewCreator" />
   </extension>

</plugin>
