<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.caleydo.view.info.DataSetItem" name="DataSetItem" schema="schema/org.caleydo.view.info.DataSetItem.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.caleydo.core.views"
            class="org.caleydo.view.info.dataset.RcpDatasetInfoView"
            icon="resources/icons/icon.png"
            id="org.caleydo.view.info.dataset"
            name="Dataset Info">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.caleydo.menu.view"
               label="View">
            <menu
                  id="org.caleydo.menu.view.tool"
                  label="Tools">
               <command
                     commandId="org.caleydo.view.info.dataset.command.opendatasetinfo"
                     icon="resources/icons/icon.png"
                     label="Dataset Info"
                     style="push">
               </command>
            </menu>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.caleydo.view.info.dataset.OpenDatasetInfoHandler"
            id="org.caleydo.view.info.dataset.command.opendatasetinfo"
            name="Dataset Info">
      </command>
   </extension>
   <extension
         point="org.caleydo.core.data.datadomain.ViewDataDomainAssociation">
      <association
            view="org.caleydo.view.info.dataset">
         <dataDomain
               type="org.caleydo.datadomain.generic">
         </dataDomain>
         <dataDomain
               type="org.caleydo.datadomain.genetic">
         </dataDomain>
      </association>
   </extension>
   <extension
         point="org.caleydo.ui.GLElementFactory">
      <factory
            factory="org.caleydo.view.info.dataset.ui.internal.InfoElementFactory"
            icon="resources/icons/icon.png"
            name="info"
            order="20">
      </factory>
   </extension>
   <extension
         point="org.caleydo.view.info.DataSetItem">
      <item
            class="org.caleydo.view.info.dataset.impl.DataSetItem"
            order="20">
      </item>
      <item
            class="org.caleydo.view.info.dataset.impl.HistogramItem"
            order="70">
      </item>
      <item
            class="org.caleydo.view.info.dataset.impl.MetaDataItem"
            order="50">
      </item>
      <item
            class="org.caleydo.view.info.dataset.impl.ProcessingInfoItem"
            order="30">
      </item>
      <item
            class="org.caleydo.view.info.dataset.impl.ProjectInfoItem"
            order="10">
      </item>
      <item
            class="org.caleydo.view.info.dataset.impl.StatsInfoItem"
            order="40">
      </item>
      <item
            class="org.caleydo.view.info.dataset.impl.TablePerspectiveItem"
            order="60">
      </item>
   </extension>
</plugin>
