<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.caleydo.rcp.Application">
         </run>
      </application>
   </extension>
   
   <extension
         point="org.eclipse.ui.views">
      <category
            name="Caleydo"
            id="org.caleydo.rcp.jogl.view.jframe">
      </category>
      
      <view
            allowMultiple="true"
            category="org.caleydo.rcp.jogl.view.jframe"
            class="org.caleydo.rcp.views.GLGears3DTestView"
            icon="resources/icons/pathway3D.png"
            id="org.caleydo.rcp.views.GLGears3DTestView"
            name="GLGears3DTestView">
      </view>
      
      <view
            allowMultiple="true"
            category="org.caleydo.rcp.jogl.view.jframe"
            class="org.caleydo.rcp.views.GLJukeboxPathwayView"
            icon="resources/icons/pathway3D.png"
            id="org.caleydo.rcp.views.GLJukeboxPathwayView"
            name="GLJukeboxPathwayView">
      </view>
      
      <view
            allowMultiple="true"
            category="org.caleydo.rcp.jogl.view.jframe"
            class="org.caleydo.rcp.views.GLHeatmap2DView"
            icon="resources/icons/heatmap.png"
            id="org.caleydo.rcp.views.GLHeatmap2DView"
            name="GLHeatmap2DView">
      </view>      

      <view
            allowMultiple="true"
            category="org.caleydo.rcp.jogl.view.jframe"
            class="org.caleydo.rcp.views.GLParCoordsView"
            icon="resources/icons/heatmap.png"
            id="org.caleydo.rcp.views.GLParCoordsView"
            name="GLParCoordsView">
      </view>         
      
      <view
            allowMultiple="true"
            category="org.caleydo.rcp.jogl.view.jframe"
            class="org.caleydo.rcp.views.GLPathway3DView"
            icon="resources/icons/pathway3D.png"
            id="org.caleydo.rcp.views.GLPathway3DView"
            name="GLPathway3DView">
      </view> 
      
      <view
            allowMultiple="true"
            category="org.caleydo.rcp.jogl.view.jframe"
            class="org.caleydo.rcp.views.GLRemoteRendering3DView"
            icon="resources/icons/pathway3D.png"
            id="org.caleydo.rcp.views.GLRemoteRendering3DView"
            name="GLRemoteRendering3DView">
      </view> 
      
      <view
            id="org.caleydo.rcp.views.browser.browserView"
            name="Caleydo browser"
            icon="icons/sample.gif"
            class="org.caleydo.rcp.views.browser.BrowserView"
            category="org.caleydo.rcp.jogl.view.jframe"
            allowMultiple="true">
      </view>
      
      <view
            id="org.caleydo.rcp.views.Pathway2DView"
            name="Pathway 2D"
            icon="resources/icons/pathway2D.png"
            class="org.caleydo.rcp.views.Pathway2DView"
            category="org.caleydo.rcp.jogl.view.jframe"
            allowMultiple="true">
      </view>      
      
      <view
            id="org.caleydo.rcp.views.HTMLBrowserView"
            name="Browser"
            icon="resources/icons/browser.png"
            class="org.caleydo.rcp.views.HTMLBrowserView"
            category="org.caleydo.rcp.jogl.view.jframe"
            allowMultiple="true">
      </view>    
      
   </extension>   
   
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="org.caleydo.rcp.perspective.GenomePerspective"
            id="org.caleydo.rcp.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.caleydo.rcp.application"
            name="Caleydo Product">
         <property
               name="appName"
               value="Caleydo Product">
         </property>
         <property
               name="aboutText"
               value="Caleydo visualization framework&#x0A;Caleydo is a general purpose visualization framework.&#x0A;See: www.caleydo.org&#x0A;&#x0A;(c) Copyright by www.geneview.org and Institute for Computer Graphics and Vision (ICG)&#x0A;Graz University of Technology - 2008.&#x0A;All Rights Reserved.">
         </property>
      </product>
   </extension>

</plugin>
