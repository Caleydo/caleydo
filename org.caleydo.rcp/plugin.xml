<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="splashExtension" name="Splash Extensions" schema="schema/splashExtension.exsd"/>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.caleydo.rcp.Application">
         </run>
      </application>
   </extension>
   
   <extension
         point="org.eclipse.ui.views">
     <category
            name="Caleydo"
            id="org.caleydo.rcp.views">
      </category>
      
      
      
      <view
            allowMultiple="true"
            category="org.caleydo.rcp.views"
            class="org.caleydo.rcp.views.GLHeatMapView"
            icon="resources/icons/view/storagebased/heatmap/heatmap.png"
            id="org.caleydo.rcp.views.GLHeatMapView"
            name="GLHeatMapView">
      </view>      

      <view
            allowMultiple="true"
            category="org.caleydo.rcp.views"
            class="org.caleydo.rcp.views.GLParCoordsView"
            icon="resources/icons/view/storagebased/parcoords/parcoords.png"
            id="org.caleydo.rcp.views.GLParCoordsView"
            name="GLParCoordsView">
      </view>         
      
      <view
            allowMultiple="true"
            category="org.caleydo.rcp.views"
            class="org.caleydo.rcp.views.GLPathwayView"
            icon="resources/icons/view/pathway/pathway.png"
            id="org.caleydo.rcp.views.GLPathwayView"
            name="GLPathwayView">
      </view> 
      
      <view
            allowMultiple="true"
            category="org.caleydo.rcp.views"
            class="org.caleydo.rcp.views.GLRemoteRenderingView"
            icon="resources/icons/view/remote/remote.png"
            id="org.caleydo.rcp.views.GLRemoteRenderingView"
            name="GLRemoteRenderingView">
      </view> 
      
      <view
            id="HTMLBrowserView.view"
            name="Browser"
            icon="resources/icons/view/browser/browser.png"
            class="org.caleydo.rcp.views.HTMLBrowserView"
            category="org.caleydo.rcp.views"
            allowMultiple="true">
      </view>
      
   </extension>   
   
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Genome Perspective"  class="org.caleydo.rcp.perspective.GenomePerspective"
            id="org.caleydo.rcp.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.caleydo.rcp.application"
            name="Caleydo">
         <property
               name="appName"
               value="Caleydo">
         </property>
         <property
               name="aboutText"
               value="Caleydo visualization framework&#x0A;Caleydo is a general purpose visualization framework.&#x0A;Check out www.caleydo.org&#x0A;&#x0A;(c) Copyright by www.geneview.org and Institute for Computer Graphics and Vision (ICG)&#x0A;Graz University of Technology - 2008.&#x0A;All Rights Reserved.">
         </property>
         <property
               name="windowImages"
               value="/org.caleydo.data/resources/icons/caleydo/caleydo16.gif,/org.caleydo.data/resources/icons/caleydo/caleydo32.gif,/org.caleydo.data/resources/icons/caleydo/caleydo48.gif,/org.caleydo.data/resources/icons/caleydo/caleydo64.gif,/org.caleydo.data/resources/icons/caleydo/caleydo128.gif">
         </property>
          <property
               name="preferenceCustomization"
               value="plugin_customization.ini"/>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="org.caleydo.rcp.splashHandlers.InteractiveSplashHandler"
            id="org.caleydo.rcp.splashHandlers.progress">
      </splashHandler>
      <splashHandlerProductBinding
            productId="org.caleydo.rcp.product"
            splashId="org.caleydo.rcp.splashHandlers.progress">
      </splashHandlerProductBinding>         
   </extension>   
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.caleydo.rcp.command.handler.ExitHandler"
            id="org.caleydo.rcp.command.exit"
            name="Exit">
      </command>
      <command
            defaultHandler="org.caleydo.rcp.command.handler.FullScreenHandler"
            id="org.caleydo.rcp.command.fullscreen"
            name="Full Screen">
      </command>
      <command
            defaultHandler="org.caleydo.rcp.command.handler.LoadDataHandler"
            id="org.caleydo.rcp.command.loaddata"
            name="Load Data">
      </command>
      <command
            defaultHandler="org.caleydo.rcp.command.handler.view.OpenHeatMapHandler"
            id="org.caleydo.rcp.command.openviews.heatmap"
            name="Open Heatmap">
      </command>
      <command
            defaultHandler="org.caleydo.rcp.command.handler.view.OpenParCoordsHandler"
            id="org.caleydo.rcp.command.openviews.parcoords"
            name="Open Parallel Coordinates">
      </command>
      <command
            defaultHandler="org.caleydo.rcp.command.handler.view.OpenRemoteHandler"
            id="org.caleydo.rcp.command.openviews.remote"
            name="Open Bucket / Jukebox">
      </command>
      <command
            defaultHandler="org.caleydo.rcp.command.handler.view.OpenBrowserHandler"
            id="org.caleydo.rcp.command.openviews.browser"
            name="Open Web Browser">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
         
         
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="fileMenu"
               label="File">
            <command
                  commandId="org.caleydo.rcp.command.loaddata"
                  label="Load Data"
                  style="push">
            </command>
            <separator
                  name="org.caleydo.rcp.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  mnemonic="P"
                  style="push">
            </command>
            <separator
                  name="org.caleydo.rcp.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.caleydo.rcp.command.exit"
                  label="Exit"
                  mnemonic="E"
                  style="push">
            </command>
         </menu>
         <menu
               id="windowMenu"
               label="Window">
            <command
                  commandId="org.caleydo.rcp.command.fullscreen"
                  label="Full Screen"
                  mnemonic="F"
                  style="push">
            </command>
            <menu
                  label="Open Views">
               <command
                     commandId="org.caleydo.rcp.command.openviews.heatmap"
                     icon="resources/icons/view/storagebased/heatmap/heatmap.png"
                     label="Heatmap"
                     style="push">
               </command>
               <command
                     commandId="org.caleydo.rcp.command.openviews.parcoords"
                     icon="resources/icons/view/storagebased/parcoords/parcoords.png"
                     label="Parallel Coordinates"
                     style="push">
               </command>
               <command
                     commandId="org.caleydo.rcp.command.openviews.remote"
                     icon="resources/icons/view/remote/remote.png"
                     label="Bucket / jukebox"
                     style="push">
               </command>
               <command
                     commandId="org.caleydo.rcp.command.openviews.browser"
                     icon="resources/icons/view/browser/browser.png"
                     label="Web Browser"
                     style="push">
               </command>
            </menu>
         </menu>
         <menu
               id="adminMenu"
               label="Admin">
            <command
                  commandId="org.eclipse.ui.views.showView"
                  label="Show error log"
                  style="push">
               <parameter
                     name="org.eclipse.ui.views.showView.viewId"
                     value="org.eclipse.pde.runtime.LogView">
               </parameter>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.trim.status">
         <toolbar
               id="org.eclipse.ui.examples.contributions.contributedStatus">
            <control
                  class="org.caleydo.rcp.util.info.InfoArea"
                  id="contributions.controlContrib.info">
            </control>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.caleydo.rcp.actionSet"
            label="actionSet"
            visible="true">
         <action
               class="org.caleydo.rcp.progress.PathwayLoadingProgressIndicatorAction"
               id="org.caleydo.rcp.action.progressindicator"
               label="Progress Indicator"
               state="true"
               style="push">
         </action>
         <menu
               id="org.caleydo.rcp.menu1"
               label="label">
         </menu>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
            <page
            class="org.caleydo.rcp.preferences.ColorMappingPreferencePage"
            id="org.caleydo.rcp.preferences.ColorMappingPreferencePage"
            name="Color Mapping Preferences">
      </page>
            <page
                  class="org.caleydo.rcp.preferences.HeatMapPreferencePage"
                  id="org.caleydo.rcp.HeatMapPreferences"
                  name="Heat Map Preferences">
            </page>
            <page
                  class="org.caleydo.rcp.preferences.ParCoordsPreferencePage"
                  id="org.caleydo.rcp.page1"
                  name="Parallel Coordinates Preferences">
            </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.caleydo.rcp.preferences.PreferenceInitializer">
      </initializer>
   </extension>

</plugin>
