<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="org.caleydo.rcp.views"
            class="org.caleydo.view.info.RcpInfoAreaView"
            icon="resources/icons/info.png"
            id="org.caleydo.view.info"
            name="Info">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.caleydo.menu.view"
               label="View">
            <command
                  commandId="org.caleydo.view.info.command.openinfo"
                  icon="resources/icons/info.png"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.caleydo.view.info.command.handler.OpenInfoHandler"
            id="org.caleydo.view.info.command.openinfo"
            name="Info">
      </command>
   </extension>

</plugin>
