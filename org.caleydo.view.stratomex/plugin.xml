<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.caleydo.view.stratomex.brick.contextmenu" name="Context Menu Entry Factoy" schema="schema/org.caleydo.view.stratomex.brick.contextmenu.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="org.caleydo.core.views"
            class="org.caleydo.view.stratomex.RcpGLStratomexView"
            icon="resources/icons/icon.png"
            id="org.caleydo.view.stratomex"
            name="StratomeX">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.caleydo.menu.view"
               label="View">
            <menu
                  id="org.caleydo.menu.view.visualization"
                  label="Visualizations">
               <command
                     commandId="org.caleydo.view.stratomex.command.openstratomex"
                     icon="resources/icons/icon.png"
                     style="push">
               </command>
            </menu>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.caleydo.view.stratomex.command.handler.OpenStratomexHandler"
            id="org.caleydo.view.stratomex.command.openstratomex"
            name="StratomeX">
      </command>
   </extension>
   <extension
         point="org.caleydo.view.ViewCategory">
      <ViewCategory
            isDataView="true"
            isReleaseView="true"
            viewID="org.caleydo.view.stratomex">
      </ViewCategory>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.caleydo.core.gui.perspective">
         <view
               id="org.caleydo.view.stratomex"
               minimized="false"
               relationship="stack"
               relative="main"
               visible="false">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.caleydo.view.ViewEmbeddingProvider">
      <Provider
            id="org.caleydo.view.stratomex">
         <Embedding
               id="org.caleydo.view.stratomex.numerical.segment.brick">
         </Embedding>
         <Embedding
               id="org.caleydo.view.stratomex.numerical.header.brick">
         </Embedding>
         <Embedding
               id="org.caleydo.view.stratomex.categorical.segment.brick">
         </Embedding>
         <Embedding
               id="org.caleydo.view.stratomex.categorical.header.brick">
         </Embedding>
         <Embedding
               id="org.caleydo.view.stratomex.pathway.segment.brick">
         </Embedding>
         <Embedding
               id="org.caleydo.view.stratomex.pathway.header.brick">
         </Embedding>
         <Embedding
               id="org.caleydo.view.stratomex.clinical.segment.brick">
         </Embedding>
         <Embedding
               id="org.caleydo.view.stratomex.clinical.header.brick">
         </Embedding>
      </Provider>
   </extension>
</plugin>
