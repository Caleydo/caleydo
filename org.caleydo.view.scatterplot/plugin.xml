<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="org.caleydo.core.views"
            class="org.caleydo.view.scatterplot.RcpGLScatterplotView"
            icon="resources/icons/scatterplot.png"
            id="org.caleydo.view.scatterplot"
            name="Scatterplot">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.caleydo.menu.view"
               label="View">
            <menu
                  id="org.caleydo.menu.view.experimental"
                  label="Experimental">
               <command
                     commandId="org.caleydo.view.scatterplot.command.openscatterplot"
                     icon="resources/icons/scatterplot.png"
                     style="push">
                  <visibleWhen
                        checkEnabled="false">
                     <with
                           variable="org.caleydo.core.isReleaseState">
                        <equals
                              value="releaseVersion">
                        </equals>
                     </with>
                  </visibleWhen>
               </command>
            </menu>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.caleydo.view.scatterplot.command.handler.OpenScatterplotHandler"
            id="org.caleydo.view.scatterplot.command.openscatterplot"
            name="Scatterplot">
      </command>
   </extension>
   <extension
         id="org.caleydo.view.scatterplot"
         name="ScatterplotViewCreator"
         point="org.caleydo.view.ViewCreator">
         <ViewCreator
          id="org.caleydo.view.ViewCreator"
          name="ScatterplotViewCreator"
          class="org.caleydo.view.scatterplot.creator.ViewCreator" />
   </extension>
</plugin>
