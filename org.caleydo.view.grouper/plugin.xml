<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.caleydo.core.views"
            class="org.caleydo.view.grouper.RcpGLGrouperView"
            icon="resources/icons/grouper.png"
            id="org.caleydo.view.grouper"
            name="Grouper">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.caleydo.menu.view"
               label="View">
            <command
                  commandId="org.caleydo.view.grouper.command.opengrouper"
                  icon="resources/icons/grouper.png"
                  style="push">
               <visibleWhen checkEnabled="false">
                  <with
                        variable="org.caleydo.core.isReleaseState">
                     <equals
                           value="releaseVersion">
                     </equals>
                  </with>
               </visibleWhen>                  
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.caleydo.view.grouper.command.handler.OpenGrouperHandler"
            id="org.caleydo.view.grouper.command.opengrouper"
            name="Grouper">
      </command>
   </extension>
   <extension
         id="org.caleydo.view.grouper"
         name="GrouperViewCreator"
         point="org.caleydo.view.ViewCreator">
         <ViewCreator
          id="org.caleydo.view.ViewCreator"
          name="GrouperViewCreator"
          class="org.caleydo.view.grouper.creator.ViewCreator" />
   </extension>
</plugin>
