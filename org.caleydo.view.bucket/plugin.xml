<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="org.caleydo.core.views"
            class="org.caleydo.view.bucket.RcpGLBucketView"
            icon="resources/icons/bucket.png"
            id="org.caleydo.view.bucket"
            name="Bucket">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.caleydo.menu.view"
               label="View">
            <command
                  commandId="org.caleydo.view.bucket.command.openbucket"
                  icon="resources/icons/bucket.png"
                  style="push">
               <visibleWhen checkEnabled="false">
                  <with
                        variable="org.caleydo.core.isReleaseState">
                     <equals
                           value="releaseVersion">
                     </equals>
                  </with>
               </visibleWhen>                  
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.caleydo.view.bucket.command.handler.OpenBucketHandler"
            id="org.caleydo.view.bucket.command.openbucket"
            name="Bucket">
      </command>
   </extension>
   <extension
         id="org.caleydo.view.bucket"
         name="BucketViewCreator"
         point="org.caleydo.view.ViewCreator">
         <ViewCreator
          id="org.caleydo.view.ViewCreator"
          name="BucketViewCreator"
          class="org.caleydo.view.bucket.creator.ViewCreator" />
   </extension>
</plugin>
